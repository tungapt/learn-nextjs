generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  slug  String? @unique
  posts Post[] // Liên kết với bảng Post
}

model Post {
  id         Int       @id @default(autoincrement())
  title      String
  slug       String    @unique
  content    String
  createdAt  DateTime  @default(now())
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
}